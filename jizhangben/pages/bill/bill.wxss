.head {
    padding: 60px 0;
    background-color: #6789C8;
    color: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 100rpx;
    box-shadow: 0 3px 10px #ccc;
    /* margin-bottom: 10px; */
}

.scroll-view {
    height: calc(100vh - 130px);
    padding-top: 10px;
    background-color: #FCFCFC;
}

.head-item {
    display: flex;
    flex-direction: column;
}

.head-item text {
    line-height: 30px;
    text-align: center;
}
.all{
  color: #FFCF75;
  font-size: 25rpx;
  text-align: center;
}


.arrow::after {
    content: '';
    display: inline-block;
    width: 0;
    height: 0;
    border-top: 6px solid #fff;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 6px solid transparent;
    position: relative;
    top: 4px;
    left: 4px;
}

.addBtn {
    position: absolute;
    right: 20px;
    bottom: 20px;
    background: #90ADE3;
    border-radius: 100%;
    display: inline-block;
    width: 40px;
    height: 40px;
    text-align: center;
    line-height: 40px;
    font-size: 30px;
    box-shadow: 2px 2px 2px #ccc;
    color: #fff;
}

.hisBtn {
    position: absolute;
    right: 20px;
    bottom: 80px;
    background: #90ADE3;
    border-radius: 100%;
    display: inline-block;
    width: 40px;
    height: 40px;
    text-align: center;
    line-height: 40px;
    font-size: 30px;
    box-shadow: 2px 2px 2px #ccc;
