/* pages/addition/addition.wxss */

.container {
  width: calc(100vw);
  /* background-color: rgb(252, 250, 243); *//* overflow: hidden; *//* padding-top: 10px; */
}

.item-wrapper {
  padding: 10px 0;
  width: calc(100vw);
  display: flex;
  flex-wrap: wrap;
}

.item {
  width: 44px;
  /* height: 44px; */
  padding: 6px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.item image {
  width: 9px;
  height: 30px;
  border-radius: 100%;
  padding: 10px;
}

.item text {
  color: rgb(119, 119, 119);
}

.swiper {
  height: calc(100vh - 50px);
  width: calc(100vw);
  margin-top: 50px;
}

.swiper-item {
  overflow: auto;
}

.menu {
  background: #6789C8;
  padding: 10px;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 999;
  box-shadow: 0 3px 10px #ccc;
  /* margin-bottom: 10px; */
}

.top-menu {
  margin: 0 auto;
  text-align: center;
  color: #333;
}

.menu text {
  padding: 0 26px;
  display: inline-block;
  color: #fff;
}

.top-menu-out {
  border: 1px solid #fff;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.top-menu-in {
  border: 1px solid #fff;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}

.bgw {
  background: #fff !important;
  color: #6789C8 !important;
}

.picker-text {
  /* background: rgb(247, 238, 157); */
  font-size: 16px;
  /* border-radius: 20px; */
  padding: 0 20px;
  color: #6789C8;
  /* border: 1px solid rgb(208, 179, 79); */
  display: inline-block;
  height: 20px;
  line-height: 10px;
}

.bot {
  background-color: #fff;
}

.botinput {
  display: flex;
  padding: 6px 10px;
}

.botinput label, .botinput input {
  display: inline-block;
  /* vertical-align: middle; */
  height: 30px;
  line-height: 30px;
}

.save-btn {
  background-color: #6789C8;
  color: #fff;
  width: calc(100vw - 20px);
  margin-top: 10px;
}
.botinput .date-label {
  display: inline-block;
  height: 34px;
  line-height: 34px;
}

.select-consumption-patterns {
  width: 100%;
}

.consumption-patterns-item {
  width: 25%;
  display: inline-block;
  position: relative;
}

.consumption-patterns-item-icon {
  width: 100rpx;
  height: 100rpx;
}

.pay-money {
  margin: 50rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}

.money-icon {
  width: 32rpx;
  height: 32rpx;
}

.date-text {
  color: gray;
  flex: 1;
  text-align: end;
}

.money-text {
  color: #204280;
  flex: 1;
  text-align: end;
}

.calculator {
  position: fixed;
  padding-top: 40rpx;
  width: 100%;
  z-index: 0;
  display: flex;
  background-color: rgba(104, 23, 23, 0.048);
  border: 1rpx solid rgba;
   box-sizing: border-box;
  height: 400rpx;
}

.calculator-number {
  flex: 3;
  width: 75%;
}

.calculator-number-item {
  width: 100%;
  display: flex;
  height: 25%;
}

.number {
  flex: 1;
  text-align: center;
  vertical-align: middle;
  margin: 10rpx;
  border: 1rpx solid gray;
  border-radius:10rpx;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 80%;
}
.number-hover{
background-color: rgba(91, 108, 139, 0.884);
}

.calculator-operator {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
}

.operator {
  border: 1rpx solid gray;
  flex: 2;
  text-align: center;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
